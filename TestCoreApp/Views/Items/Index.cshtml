@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<h1>Items View</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
               Item Name 
            </th >
            <th scope="col">
               Item Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) 
        {
            <tr class="table-primary">
              <td scope="row" width="50%">
                  @item.Name
              </td>
              <td width="30%">
                  @item.Price
              </td>
           </tr>
        }
    </tbody>
</table>